<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="256dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_title"
        style="@style/white_18"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_tip_title"
        android:gravity="center"
        android:text="这是标题" />
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_tip_content">
        <TextView
        android:id="@+id/tip_textview" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:gravity="center"/>
        
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
                <TextView
		        android:id="@+id/cancel_textview" 
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:text="取消"
		        style="@style/white_18"
		        android:layout_marginRight="10dp"
		        android:background="@drawable/btn_cancel_selector"/>
                             
                
                <TextView
		        android:id="@+id/sure_textview" 
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:text="确定"
		        style="@style/white_18"
		        android:layout_marginLeft="10dp"
		        android:background="@drawable/btn_reg_selector"/>                
        </LinearLayout>        
        
    </LinearLayout>

</LinearLayout>
